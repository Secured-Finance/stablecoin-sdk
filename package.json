{
  "name": "stablecoin-sdk",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "node": ">=14.0.0 <17.0.0"
  },
  "release": {
    "extends": "semantic-release-monorepo",
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "headerPattern": "^(\\w*)(?:\\((.*)\\))?!?: (.*)$"
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "build": "run-s 'build:*'",
    "build:dev-frontend": "yarn workspace @secured-finance/dev-frontend build",
    "deploy": "yarn workspace @secured-finance/stablecoin-lib-ethers hardhat deploy",
    "docs": "run-s 'docs:*'",
    "docs:collect-sdk-apis": "node scripts/collect-sdk-apis.js",
    "docs:api-documenter": "api-documenter generate -i temp/sdk-apis -o docs/sdk",
    "fuzzer": "yarn workspace @secured-finance/fuzzer fuzzer",
    "postinstall": "run-s prepare",
    "prepare": "run-s 'prepare:*'",
    "prepare:contracts": "yarn workspace @secured-finance/stablecoin-contracts prepare",
    "prepare:lib-base": "yarn workspace @secured-finance/stablecoin-lib-base prepare",
    "prepare:lib-ethers": "yarn workspace @secured-finance/stablecoin-lib-ethers prepare",
    "prepare:lib-react": "yarn workspace @secured-finance/stablecoin-lib-react prepare",
    "prepare:lib-subgraph": "yarn workspace @secured-finance/stablecoin-lib-subgraph prepare",
    "prepare:providers": "yarn workspace @secured-finance/stablecoin-providers prepare",
    "prepare:subgraph": "yarn workspace @secured-finance/stablecoin-subgraph prepare",
    "prepare:docs": "run-s docs",
    "rebuild": "run-s prepare build",
    "release": "run-s 'release:*'",
    "release:delete-dev-deployments": "yarn workspace @secured-finance/stablecoin-lib-ethers delete-dev-deployments",
    "release:packages": "yarn semantic-release",
    "save-live-version": "yarn workspace @secured-finance/stablecoin-lib-ethers save-live-version",
    "start-dev-frontend": "yarn workspace @secured-finance/dev-frontend start",
    "start-fork": "hardhat --config hardhat.config.mainnet-fork.ts node",
    "start-tunnel": "./scripts/start-local-tunnel.sh",
    "test": "run-s 'test:*'",
    "test:lib-base": "yarn workspace @secured-finance/stablecoin-lib-base test",
    "test:lib-ethers": "yarn workspace @secured-finance/stablecoin-lib-ethers test",
    "test:dev-frontend": "run-s --continue-on-error 'test:dev-frontend:*'",
    "test:dev-frontend:run": "yarn workspace @secured-finance/dev-frontend test run",
    "test-live": "run-s 'test-live:*'",
    "test-live:lib-ethers": "yarn workspace @secured-finance/stablecoin-lib-ethers test-live"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@microsoft/api-documenter": "^7.12.6",
    "fs-extra": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "semantic-release": "^17.4.2",
    "semantic-release-monorepo": "^7.0.4"
  },
  "packageManager": "yarn@3.5.1"
}
